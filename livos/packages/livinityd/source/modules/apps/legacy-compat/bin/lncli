#!/usr/bin/env bash

set -euo pipefail

LIVINITY_ROOT="$(readlink -f $(dirname "${BASH_SOURCE[0]}")/..)"

echo
echo "  *** Deprecation notice ***"
echo "  In a future version of Livinity, 'lncli' will be removed."
echo

result=$(docker exec -it lightning_lnd_1 lncli "$@") 

# We need to echo with quotes to preserve output formatting
echo "$result"