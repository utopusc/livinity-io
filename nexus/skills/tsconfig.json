{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": ".",
    "rootDir": ".",
    "declaration": false,
    "sourceMap": false,
    "isolatedModules": true
  },
  "include": ["*.ts"],
  "exclude": ["_templates"]
}
